<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/new_notif"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/notif_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notif_title "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notif_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notif_time" />

        <TextView
            android:id="@+id/notif_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content content content content contentcontentcontentcontent content"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>