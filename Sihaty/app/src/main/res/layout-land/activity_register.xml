<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/bg"
    android:gravity="center"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center|top"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:src="@drawable/logo"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"/>
        <Button
            android:id="@+id/bu_inscription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#eee"
            android:textColor="#13637F"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:text="Inscription"/>
        <TextView
            android:id="@+id/Annuler"
            android:fontFamily="casual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            android:textSize="20dp"
            android:textColor="#555"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/NomPrenom"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:textColorHint="#555"
            android:inputType="textPersonName"
            android:textStyle="bold|italic"
            android:fontFamily="casual"
            android:hint="Nom et prénom"
            android:background="#55ffffff"/>

        <EditText
            android:id="@+id/cin_register"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:textColorHint="#555"
            android:inputType="text"
            android:textStyle="bold|italic"
            android:fontFamily="casual"
            android:hint="CIN"
            android:background="#55ffffff"/>

        <EditText
            android:id="@+id/date_naissance"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:textColorHint="#555"
            android:inputType="date"
            android:textStyle="bold|italic"
            android:fontFamily="casual"
            android:hint="Date de naissance"
            android:focusable="false"
            android:background="#55ffffff"/>

        <EditText
            android:id="@+id/phone_register"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:textColorHint="#555"
            android:inputType="number"
            android:textStyle="bold|italic"
            android:fontFamily="casual"
            android:hint="N° de téléphone"
            android:background="#55ffffff"/>

        <RadioGroup
            android:layout_marginBottom="5dp"
            android:id="@+id/sexe"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RadioButton
                android:id="@+id/sexe_homme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOMME"
                android:textColor="#555"
                android:checked="true"
                android:layout_marginRight="50dp"/>

            <RadioButton
                android:id="@+id/sexe_femme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555"
                android:text="FEMME"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>